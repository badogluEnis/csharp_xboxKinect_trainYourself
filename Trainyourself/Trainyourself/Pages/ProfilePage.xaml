<Page x:Class="Trainyourself.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="1500"
      Title="ProfilePage">

    <Grid Style="{StaticResource BackgroundGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="1" Content="Your Name" FontSize="45" Padding="0 90 0 0" />
        <TextBox Grid.Column="1"  Grid.Row="1" FontSize="45" Text="" Name="Name" Padding="0 90 0 0" Height="120"/>
        
            <Label FontSize="60" Content="Your Height" Padding="200 0 0 0" FontStyle="Italic"/>
            <Label Name="YourHeightLabel" Padding="300 0 0 0" FontWeight="Bold"/>
        
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Label FontSize="60" Content="Your Weight" Padding="200 0 0 0" />
            <Label Name="YourWeightLabel" Padding="315 0 0 0" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3">
            <Label FontSize="60" Padding="60  0 0 0" Content="Your Body Mass Index"/>
            <Label Name="BMIOutput" Padding="250 0 0 0" FontWeight="Bold"/>
        </StackPanel>
        <Button Name="backbutton" Style="{StaticResource Buttonsize}" Grid.Column="1" Grid.Row="4" Click="Backbutton_OnClick" Content="Back" FontSize="12"/>
        <TextBox IsReadOnly="True" x:Name="textBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="248,185,0,0" Grid.Row="3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
