<Page x:Class="Trainyourself.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1500" d:DesignWidth="1500"
      Title="ProfilePage">

    <Grid Style="{StaticResource BackgroundGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Margin="0 100 0 0" FontSize="30" Content="Vorname Nachname"/>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label FontSize="18" Content="Your Height"/>
            <Label Name="YourHeightLabel"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <Label FontSize="18" Content="Your Weight"/>
            <Label Name="YourWeightLabel" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3">
            <Label FontSize="18" Content="Your Body Mass Index"/>
            <Label Name="BMIOutput"/>
        </StackPanel>
    </Grid>
</Page>
