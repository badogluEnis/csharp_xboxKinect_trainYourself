<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid" x:Key="BackgroundGrid">
        <Setter Property="Background"  >
            <Setter.Value>
                <ImageBrush ImageSource="../pictures/Hintergrund.jpg" Stretch="UniformToFill"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="30"/>
    </Style>
    <Style TargetType="Button" x:Key="Buttonsize">
        <Setter Property="Height" Value="40"></Setter>
        <Setter Property="Width" Value="150"></Setter>
    </Style>

    <Style TargetType="StackPanel" x:Key="Stackstyle">
        <Setter Property="Margin" Value="0 5 0 5"></Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="Textboxsize">
        <Setter Property="Width" Value="175"/>
    </Style>
    <Style TargetType="Label" x:Key="Labelmargin">
        <Setter Property="Margin" Value=""></Setter>
    </Style>
    <Style TargetType="Label" x:Key="inputlabelsize">
        <Setter Property="FontSize" Value="25"/>
    </Style>
    <Style TargetType="Label" x:Key="FontColor">
        <Setter Property="Foreground" Value="White"/>        
    </Style>









</ResourceDictionary>