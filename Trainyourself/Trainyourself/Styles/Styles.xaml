<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Trainyourself.Styles">
    
 <Style TargetType="Grid" x:Key="BackgroundGrid">
     <Setter Property="Background">
         <Setter.Value>
             <ImageBrush ImageSource="/pictures/fitness.jpg" Stretch="UniformToFill"/>
           </Setter.Value>
     </Setter>
     <Setter Property="Margin" Value="30"/>
 </Style>
<Style TargetType="Button" x:Key="buttonsize">
    <Setter Property="Height" Value="40"></Setter>
    <Setter Property="Width" Value="150"></Setter>
</Style> 

<Style TargetType="StackPanel" x:Key="stackstyle">
        <Setter Property="Margin" Value="0 5 0 5"></Setter>
    </Style>

<Style TargetType="TextBox" x:Key="textboxsize">
        <Setter Property="Width" Value="175"/>
</Style>
<Style TargetType="Label" x:Key="labelmargin">
    <Setter Property="Margin" Value=""></Setter>
</Style>

</ResourceDictionary>